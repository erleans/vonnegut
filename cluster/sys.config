%% -*- erlang -*-
[{vonnegut, [{chain, [{name, chain1},
                      {discovery, {direct, [{'chain1-0', "127.0.0.1", 15555, 5555},
                                            {'chain1-1', "127.0.0.1", 15556, 5556},
                                            {'chain1-2', "127.0.0.1", 15557, 5557}]}},
                      {replicas, 3}]},

             {client, [{endpoints, [{"127.0.0.1", 5555}]}]}
             %% {log_dirs, ["${LOG_DIR}"]}
            ]},

 {partisan, [{peer_ip, {127,0,0,1}},
             {partisan_peer_service_manager,
              partisan_default_peer_service_manager}]},

 {kernel, [{start_time, true}]},

 {opencensus, [{reporter, {oc_reporter_noop, #{project => <<"nucleus-sti">>,
                                               service_account => <<"default">>}}}]},

{lager,
  [{error_logger_hwm, 100},
   {crash_log_count, 5},
   {crash_log_date, "$D0"},
   {crash_log_size, 10485760},
   {crash_log_msg_size, 65536},
   {crash_log, "./log/crash.log"},
   {handlers,
    [{lager_console_backend, [{level, info},
                              {formatter, lager_default_formatter},
                              {formatter_config,
                               [time, color, " [",severity,"] ",
                                pid, " ",
                                "mod=", module,
                                " fun=", function, " ", message, "\e[0m\r\n"]}]},
     {lager_file_backend,
      [{file, "./log/error.log"},
       {level, error},
       {formatter, lager_default_formatter},
       {formatter_config,
        [time, color, " [",severity,"] ",
         pid, " ",
         "mod=", module,
         " fun=", function, " ", message, "\e[0m\r\n"]},
       {size, 10485760},
       {date, "$D0"},
       {count, 5}]},
     {lager_file_backend,
      [{file, "./log/debug.log"},
       {level, debug},
       {formatter, lager_default_formatter},
       {formatter_config,
        [time, color, " [",severity,"] ",
         pid, " ",
         "mod=", module,
         " fun=", function, " ", message, "\e[0m\r\n"]},
       {size, 10485760},
       {date, "$D0"},
       {count, 5}]}]},
   {error_logger_redirect, true}]},

 "../../../../config/shared"
].
